<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Video Upload</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #121212;
      color: #ffffff;
      padding: 20px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .container {
      max-width: 600px;
      margin: 0 auto;
    }
    h1 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
      text-align: center;
      color: #007bff;
    }
    form {
      background-color: #1e1e1e;
      border-radius: 10px;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    form:hover {
      transform: translateY(-5px);
    }
    .form-control {
      background-color: #2d2d2d;
      border: 1px solid #444;
      color: #ffffff;
      margin-bottom: 1rem;
    }
    .form-control:focus {
      background-color: #2d2d2d;
      border-color: #007bff;
      color: #ffffff;
      box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
    }
    .btn-primary {
      background-color: #007bff;
      border: none;
      padding: 0.5rem 1rem;
      transition: background-color 0.3s ease;
    }
    .btn-primary:hover {
      background-color: #0056b3;
    }
    .form-control::placeholder {
      color: #aaaaaa;
    }
    .video-list {
      margin-top: 2rem;
    }
    .video-item {
      background-color: #1e1e1e;
      border-radius: 5px;
      padding: 1rem;
      margin-bottom: 1rem;
    }
    .btn-danger {
      background-color: #dc3545;
      border: none;
      padding: 0.5rem 1rem;
      transition: background-color 0.3s ease;
    }
    .btn-danger:hover {
      background-color: #c82333;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Upload Video</h1>
    <form action="/upload" method="POST" class="card">
      <div class="mb-3">
        <input type="text" name="title" class="form-control" placeholder="Video Title" required>
      </div>
      <div class="mb-3">
        <textarea name="description" class="form-control" placeholder="Video Description" required></textarea>
      </div>
      <div class="mb-3">
        <input type="file" name="video" class="form-control" accept="video/*" required>
      </div>
      <button type="submit" class="btn btn-primary w-100">Upload</button>
    </form>
    <div class="video-list">
      <h2>Uploaded Videos</h2>
      <div id="videoList"></div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function fetchVideos() {
      fetch('/videos')
        .then(response => response.json())
        .then(data => {
          const videoList = document.getElementById('videoList');
          videoList.innerHTML = data.map(video => `
            <div class="video-item">
              <h3>${video.title}</h3>
              <p>${video.description}</p>
              <button class="btn btn-danger" onclick="deleteVideo('${video._id}')">Delete</button>
            </div>
          `).join('');
        });
    }

    function deleteVideo(id) {
      fetch(`/videos/${id}`, { method: 'DELETE' })
        .then(response => response.json())
        .then(data => {
          fetchVideos();
        });
    }

    fetchVideos();
  </script>
</body>
</html> 